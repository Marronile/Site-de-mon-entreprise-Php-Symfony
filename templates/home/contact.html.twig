{# Extending base template #}
{% extends 'base.html.twig' %}

{# Page title #}
{% block title %}Contactez-nous{% endblock %}

{# Page header #}
{% block page_header %}
<div class="page-header header-filter" data-parallax="true" style="background-image: url('./images/bg.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1 class="title">Contactez-nous</h1>
                <h4>Réalisons le prochain projet de votre client ensemble.
                </h4>
                <br>
                <a id="github" href="https://github.com/marroniile" target="_blank" class="btn btn-raised btn-github"
                    rel="nofollow">
                    <i class="fa fa-github"></i>
                    Utilisez nos codes sources
                </a>
            </div>
        </div>
    </div>
</div>{% endblock %}

{# Page content #}
{% block page_content %}
<div class="container">
    <div class="section section-contacts">
        <div class="row">
            <div class="col-md-8 ml-auto mr-auto">
                <h2 class="text-center title">Travaillez avec nous</h2>
                <h4 class="text-center description" id="contactArea">
                    De nos tutoriels web orientés projets réels à notre programme de coaching, nous trouvons
                    de réel plasir à travailler avec les gens. <br>
                    Contactez-nous !
                </h4>
                <br>
                <br>

                <!--Error-->
                <form class="contact-form" action="/contact#contactArea" method="POST">
                    <div class="row">
                        <div class="col-md-4 ml-auto mr-auto text-center">
                            <div class="form-group">
                                <label class="bmd-label-floating">Email</label>
                                <input type="email" class="form-control" id="email" name="email">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="content" class="bmd-label-floating">Votre Message</label>
                        <textarea type="text" class="form-control" rows="5" id="content" name="content"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-4 ml-auto mr-auto text-center">
                            <button class="btn btn-primary btn-raised">
                                Envoyer
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}